@model IEnumerable<AdminDashboard.Application.DTOs.PendingRecordDto>
@{
    ViewData["Title"] = "Pending Approvals";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container-fluid">
        <div class="row align-items-center mb-4">
            <div class="col-12 col-md-6 mb-3 mb-md-0">
                <h2 class="page-title mb-0">
                    <i class="fas fa-clock me-2 text-warning"></i>Pending Approvals
                </h2>
                <p class="text-muted mb-0">Review and approve maker-checker requests</p>
            </div>
            <div class="col-12 col-md-6 text-md-end">
                <a asp-action="ApprovedList" class="btn btn-success me-2">
                    <i class="fas fa-check-circle me-1"></i>Approved
                </a>
                <a asp-action="RejectedList" class="btn btn-danger">
                    <i class="fas fa-times-circle me-1"></i>Rejected
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Type</th>
                                <th>Operation</th>
                                <th>Requested By</th>
                                <th>Request Date</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>#@item.PendingId</strong></td>
                                    <td>
                                        <span class="badge bg-info">
                                            <i class="fas fa-tag me-1"></i>@item.RecordType
                                        </span>
                                    </td>
                                    <td>
                                        @if (item.Operation == "Create")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-plus-circle me-1"></i>Create
                                            </span>
                                        }
                                        else if (item.Operation == "Update")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-edit me-1"></i>Update
                                            </span>
                                        }
                                        else if (item.Operation == "Delete")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-trash me-1"></i>Delete
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <i class="fas fa-user me-1 text-muted"></i>@item.MakerName
                                    </td>
                                    <td>
                                        <small class="text-muted">
                                            <i class="far fa-calendar me-1"></i>@item.CreatedDate.ToString("dd MMM yyyy")
                                        </small><br />
                                        <small class="text-muted">
                                            <i class="far fa-clock me-1"></i>@item.CreatedDate.ToString("HH:mm")
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-hourglass-half me-1"></i>@item.Status
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details" asp-route-id="@item.PendingId" 
                                           class="btn btn-sm btn-primary" 
                                           title="View Details">
                                            <i class="fas fa-eye me-1"></i>Review
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <!-- Summary Info -->
                <div class="mt-3 pt-3 border-top">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="text-muted mb-0">
                                <i class="fas fa-clock text-warning me-2"></i>
                                <strong>Pending Requests:</strong> @Model.Count() awaiting approval
                            </p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-check-double fa-4x text-success mb-3"></i>
                    <h5 class="text-muted">All Caught Up!</h5>
                    <p class="text-muted">There are no pending approvals at the moment.</p>
                </div>
            }
        </div>
    </div>
</div>
