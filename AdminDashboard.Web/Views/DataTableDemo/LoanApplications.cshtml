            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
        }
    </style>

    <script>
        var table;

        $(document).ready(function() {
            // Initialize DataTable
            table = $('#loanTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel"></i> Excel',
                        className: 'btn btn-success btn-sm',
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5, 6, 7, 8, 9]
                        }
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fas fa-file-pdf"></i> PDF',
                        className: 'btn btn-danger btn-sm',
                        orientation: 'landscape',
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5, 6, 7, 8, 9]
                        }
                    },
                    {
                        extend: 'print',
                        text: '<i class="fas fa-print"></i> Print',
                        className: 'btn btn-info btn-sm',
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5, 6, 7, 8, 9]
                        }
                    }
                ],
                pageLength: 25,
                order: [[1, 'asc']],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search loans..."
                },
                columnDefs: [
                    { orderable: false, targets: [0, 10] }
                ]
            });

            // Hide default buttons
            $('.dt-buttons').hide();

            // Select All
            $('#selectAll').on('change', function() {
                $('.row-select').prop('checked', this.checked);
                updateBulkActionsBar();
            });

            // Individual selection
            $(document).on('change', '.row-select', function() {
                updateBulkActionsBar();
            });

            // Global search
            $('#globalSearch').on('keyup', function() {
                table.search(this.value).draw();
            });

            // Reset filters
            $('#resetFilters').on('click', function() {
                $('#globalSearch').val('');
                $('#loanTypeFilter').val('');
                $('#statusFilter').val('');
                $('#priorityFilter').val('');
                $('#amountFilter').val('');
                table.search('').columns().search('').draw();
            });
        });

        function updateStatus(select, loanId) {
            var newStatus = select.value;
            var $select = $(select);
            
            // Update select styling based on status
            $select.removeClass('bg-primary bg-info bg-warning bg-success bg-danger text-white text-dark');
            
            switch(newStatus) {
                case 'Approved':
                    $select.addClass('bg-success text-white');
                    break;
                case 'Rejected':
                    $select.addClass('bg-danger text-white');
                    break;
                case 'Under Review':
                    $select.addClass('bg-info text-white');
                    break;
                case 'Credit Check':
                case 'Documentation':
                    $select.addClass('bg-warning text-dark');
                    break;
                default:
                    $select.addClass('bg-primary text-white');
            }
            
            showNotification('Success', `Status updated to "${newStatus}" for ${loanId}`, 'success');
        }

        function updateBulkActionsBar() {
            var count = $('.row-select:checked').length;
            $('#selectedCount').text(count + ' selected');
            
            if (count > 0) {
                $('#bulkActionsBar').removeClass('d-none');
            } else {
                $('#bulkActionsBar').addClass('d-none');
            }
        }

        function clearSelection() {
            $('.row-select').prop('checked', false);
            $('#selectAll').prop('checked', false);
            updateBulkActionsBar();
        }

        function bulkApprove() {
            var count = $('.row-select:checked').length;
            if (confirm(`Approve ${count} loan applications?`)) {
                showNotification('Success', `${count} applications approved successfully`, 'success');
                clearSelection();
            }
        }

        function bulkReject() {
            var count = $('.row-select:checked').length;
            if (confirm(`Reject ${count} loan applications? This action requires a reason.`)) {
                showNotification('Info', `${count} rejection requests submitted`, 'info');
                clearSelection();
            }
        }

        function bulkAssign() {
            var count = $('.row-select:checked').length;
            showNotification('Info', `Assigning ${count} applications to officer...`, 'info');
        }

        function bulkPriority() {
            var count = $('.row-select:checked').length;
            showNotification('Info', `Setting priority for ${count} applications...`, 'info');
        }

        function exportExcel() {
            table.button('.buttons-excel').trigger();
        }

        function exportPDF() {
            table.button('.buttons-pdf').trigger();
        }

        function printTable() {
            table.button('.buttons-print').trigger();
        }

        function viewLoan(loanId) {
            showNotification('Info', `Opening loan details: ${loanId}`, 'info');
        }

        function approveLoan(loanId) {
            if (confirm(`Approve loan application ${loanId}?`)) {
                showNotification('Success', `Loan ${loanId} approved successfully`, 'success');
            }
        }

        function rejectLoan(loanId) {
            if (confirm(`Reject loan application ${loanId}?`)) {
                showNotification('Warning', `Loan ${loanId} rejected`, 'warning');
            }
        }

        function viewDocuments(loanId) {
            showNotification('Info', `Loading documents for ${loanId}...`, 'info');
        }

        function submitLoan() {
            var form = document.getElementById('newLoanForm');
            if (form.checkValidity()) {
                showNotification('Success', 'New loan application submitted successfully!', 'success');
                $('#newLoanModal').modal('hide');
                form.reset();
            } else {
                form.reportValidity();
            }
        }

        function showNotification(title, message, type) {
            var bgClass = type === 'success' ? 'bg-success' : 
                          type === 'warning' ? 'bg-warning' : 
                          type === 'danger' ? 'bg-danger' : 'bg-info';
            
            var notification = $(`
                <div class="position-fixed top-0 end-0 p-3" style="z-index: 99999">
                    <div class="toast show ${bgClass} text-white" role="alert">
                        <div class="toast-header ${bgClass} text-white border-0">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong class="me-auto">${title}</strong>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                        </div>
                        <div class="toast-body">
                            ${message}
                        </div>
                    </div>
                </div>
            `);
            
            $('body').append(notification);
            
            setTimeout(function() {
                notification.fadeOut(function() {
                    $(this).remove();
                });
            }, 4000);
        }
    </script>
}
