    <script src="https://cdn.datatables.net/buttons/2.4.2/js/buttons.print.min.js"></script>

    <style>
        .customer-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 16px;
        }
        
        .banking-table tbody tr {
            transition: all 0.3s;
        }
        
        .banking-table tbody tr:hover {
            background-color: #f8f9fa !important;
            transform: scale(1.005);
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }
        
        .status-badge {
            min-width: 90px;
            padding: 6px 12px;
        }
    </style>

    <script>
        var table;
        
        $(document).ready(function() {
            // Initialize DataTable
            table = $('#accountsTable').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'excelHtml5',
                        text: '<i class="fas fa-file-excel"></i> Excel',
                        className: 'btn btn-success btn-sm',
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5, 6, 7, 8]
                        }
                    },
                    {
                        extend: 'pdfHtml5',
                        text: '<i class="fas fa-file-pdf"></i> PDF',
                        className: 'btn btn-danger btn-sm',
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5, 6, 7, 8]
                        }
                    },
                    {
                        extend: 'print',
                        text: '<i class="fas fa-print"></i> Print',
                        className: 'btn btn-info btn-sm',
                        exportOptions: {
                            columns: [1, 2, 3, 4, 5, 6, 7, 8]
                        }
                    }
                ],
                pageLength: 25,
                order: [[1, 'asc']],
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search accounts..."
                },
                columnDefs: [
                    { orderable: false, targets: [0, 9] }
                ]
            });

            // Hide default buttons
            $('.dt-buttons').hide();

            // Select All
            $('#selectAll').on('change', function() {
                $('.row-select').prop('checked', this.checked);
                updateBulkActionsBar();
            });

            // Individual selection
            $(document).on('change', '.row-select', function() {
                updateBulkActionsBar();
            });

            // Global search
            $('#globalSearch').on('keyup', function() {
                table.search(this.value).draw();
            });

            // Apply filters
            $('#applyFilters').on('click', function() {
                applyFilters();
            });

            // Reset filters
            $('#resetFilters').on('click', function() {
                $('#globalSearch').val('');
                $('#accountTypeFilter').val('');
                $('#statusFilter').val('');
                $('#kycFilter').val('');
                $('#branchFilter').val('');
                table.search('').columns().search('').draw();
            });
        });

        function applyFilters() {
            var type = $('#accountTypeFilter').val();
            var status = $('#statusFilter').val();
            var kyc = $('#kycFilter').val();
            var branch = $('#branchFilter').val();
            
            table.columns(3).search(type);
            table.columns(5).search(status);
            table.columns(6).search(kyc);
            table.columns(7).search(branch);
            table.draw();
        }

        function updateBulkActionsBar() {
            var count = $('.row-select:checked').length;
            $('#selectedCount').text(count + ' selected');
            
            if (count > 0) {
                $('#bulkActionsBar').removeClass('d-none');
            } else {
                $('#bulkActionsBar').addClass('d-none');
            }
        }

        function clearSelection() {
            $('.row-select').prop('checked', false);
            $('#selectAll').prop('checked', false);
            updateBulkActionsBar();
        }

        function bulkActivate() {
            var count = $('.row-select:checked').length;
            showNotification('Success', `${count} accounts activated successfully`, 'success');
            clearSelection();
        }

        function bulkSuspend() {
            var count = $('.row-select:checked').length;
            if (confirm(`Suspend ${count} accounts?`)) {
                showNotification('Warning', `${count} accounts suspended`, 'warning');
                clearSelection();
            }
        }

        function bulkDeactivate() {
            var count = $('.row-select:checked').length;
            if (confirm(`Deactivate ${count} accounts? This action requires approval.`)) {
                showNotification('Info', `${count} deactivation requests submitted`, 'info');
                clearSelection();
            }
        }

        function bulkExport() {
            showNotification('Success', 'Exporting selected accounts...', 'info');
        }

        function exportExcel() {
            table.button('.buttons-excel').trigger();
        }

        function exportPDF() {
            table.button('.buttons-pdf').trigger();
        }

        function printTable() {
            table.button('.buttons-print').trigger();
        }

        function viewAccount(accountId) {
            showNotification('Info', `Viewing details for account: ${accountId}`, 'info');
        }

        function editAccount(accountId) {
            showNotification('Info', `Edit account: ${accountId}`, 'info');
        }

        function viewTransactions(accountId) {
            showNotification('Info', `Loading transactions for account: ${accountId}`, 'info');
        }

        function printStatement(accountId) {
            showNotification('Success', `Generating statement for account: ${accountId}`, 'success');
        }

        function saveAccount() {
            var form = document.getElementById('addAccountForm');
            if (form.checkValidity()) {
                showNotification('Success', 'New account created successfully!', 'success');
                $('#addAccountModal').modal('hide');
                form.reset();
            } else {
                form.reportValidity();
            }
        }

        function showNotification(title, message, type) {
            var bgClass = type === 'success' ? 'bg-success' : 
                          type === 'warning' ? 'bg-warning' : 
                          type === 'danger' ? 'bg-danger' : 'bg-info';
            
            var notification = $(`
                <div class="position-fixed top-0 end-0 p-3" style="z-index: 99999">
                    <div class="toast show ${bgClass} text-white" role="alert">
                        <div class="toast-header ${bgClass} text-white border-0">
                            <i class="fas fa-check-circle me-2"></i>
                            <strong class="me-auto">${title}</strong>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                        </div>
                        <div class="toast-body">
                            ${message}
                        </div>
                    </div>
                </div>
            `);
            
            $('body').append(notification);
            
            setTimeout(function() {
                notification.fadeOut(function() {
                    $(this).remove();
                });
            }, 4000);
        }
    </script>
}
