@model AdminDashboard.Application.DTOs.CreateProductDto
@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container-fluid">
        <div class="row align-items-center mb-4">
            <div class="col-12 col-md-6 mb-3 mb-md-0">
                <h2 class="page-title mb-0">
                    <i class="fas fa-plus-circle me-2 text-danger"></i>Create New Product
                </h2>
                <p class="text-muted mb-0">Add a new product to your catalog</p>
            </div>
            <div class="col-12 col-md-6 text-md-end">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-box me-2"></i>Product Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="col-12 col-md-6 mb-3">
                                <label asp-for="ProductCode" class="form-label">
                                    Product Code <span class="text-danger">*</span>
                                </label>
                                <input asp-for="ProductCode" class="form-control" placeholder="e.g., PROD001" />
                                <span asp-validation-for="ProductCode" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-md-6 mb-3">
                                <label asp-for="Category" class="form-label">
                                    Category <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Category" class="form-control" list="categoryList" placeholder="e.g., Electronics" />
                                <datalist id="categoryList">
                                    @if (ViewBag.Categories != null)
                                    {
                                        foreach (var cat in ViewBag.Categories as List<string>)
                                        {
                                            <option value="@cat"></option>
                                        }
                                    }
                                </datalist>
                                <span asp-validation-for="Category" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProductName" class="form-label">
                                Product Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="ProductName" class="form-control" placeholder="e.g., Laptop Dell XPS 15" />
                            <span asp-validation-for="ProductName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                      placeholder="Enter product description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-12 col-sm-6 mb-3">
                                <label asp-for="Price" class="form-label">
                                    Price ($) <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <div class="col-12 col-sm-6 mb-3">
                                <label asp-for="Stock" class="form-label">
                                    Stock Quantity <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Stock" class="form-control" type="number" placeholder="0" />
                                <span asp-validation-for="Stock" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                <label asp-for="IsActive" class="form-check-label">
                                    Active (Product is available for sale)
                                </label>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex flex-column flex-sm-row gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-save me-1"></i>Create Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <style>
        .page-header {
            background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
            padding: 1.5rem 0;
            border-bottom: 2px solid #dc3545;
            margin-bottom: 2rem;
        }

        .page-title {
            font-weight: 600;
            color: #333;
        }

        .form-label {
            font-weight: 500;
            color: #495057;
        }

        .card-header {
            font-weight: 600;
        }

        /* Mobile optimizations */
        @@media (max-width: 576px) {
            .input-group-text {
                font-size: 0.875rem;
            }

            .btn {
                width: 100%;
            }
        }
    </style>
}
