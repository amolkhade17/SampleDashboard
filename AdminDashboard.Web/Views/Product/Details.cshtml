@model AdminDashboard.Application.DTOs.ProductDto
@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- Page Header -->
<div class="page-header">
    <div class="container-fluid">
        <div class="row align-items-center mb-4">
            <div class="col-12 col-md-6 mb-3 mb-md-0">
                <h2 class="page-title mb-0">
                    <i class="fas fa-box me-2 text-danger"></i>Product Details
                </h2>
                <p class="text-muted mb-0">@Model.ProductName</p>
            </div>
            <div class="col-12 col-md-6 text-md-end">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
                <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">
                    <i class="fas fa-edit me-1"></i>Edit
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Product Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-12 col-sm-4">
                            <strong>Product Code:</strong>
                        </div>
                        <div class="col-12 col-sm-8">
                            <span class="badge bg-primary fs-6">@Model.ProductCode</span>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-12 col-sm-4">
                            <strong>Product Name:</strong>
                        </div>
                        <div class="col-12 col-sm-8">
                            @Model.ProductName
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-12 col-sm-4">
                            <strong>Description:</strong>
                        </div>
                        <div class="col-12 col-sm-8">
                            @(Model.Description ?? "No description available")
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-12 col-sm-4">
                            <strong>Category:</strong>
                        </div>
                        <div class="col-12 col-sm-8">
                            <span class="badge bg-info">@Model.Category</span>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-12 col-sm-4">
                            <strong>Price:</strong>
                        </div>
                        <div class="col-12 col-sm-8">
                            <h4 class="text-success mb-0">$@Model.Price.ToString("N2")</h4>
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-12 col-sm-4">
                            <strong>Stock:</strong>
                        </div>
                        <div class="col-12 col-sm-8">
                            @if (Model.Stock > 10)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="fas fa-check-circle me-1"></i>@Model.Stock units
                                </span>
                            }
                            else if (Model.Stock > 0)
                            {
                                <span class="badge bg-warning fs-6">
                                    <i class="fas fa-exclamation-triangle me-1"></i>@Model.Stock units (Low Stock)
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger fs-6">
                                    <i class="fas fa-times-circle me-1"></i>Out of Stock
                                </span>
                            }
                        </div>
                    </div>
                    <hr />
                    <div class="row mb-3">
                        <div class="col-12 col-sm-4">
                            <strong>Status:</strong>
                        </div>
                        <div class="col-12 col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="fas fa-check-circle me-1"></i>Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">
                                    <i class="fas fa-times-circle me-1"></i>Inactive
                                </span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Audit Information</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Created By</small>
                        <strong>@Model.CreatedBy</strong>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted d-block">Created Date</small>
                        <strong>@Model.CreatedDate.ToString("dd MMM yyyy HH:mm")</strong>
                    </div>
                    @if (Model.ModifiedBy != null)
                    {
                        <hr />
                        <div class="mb-3">
                            <small class="text-muted d-block">Modified By</small>
                            <strong>@Model.ModifiedBy</strong>
                        </div>
                        <div class="mb-3">
                            <small class="text-muted d-block">Modified Date</small>
                            <strong>@Model.ModifiedDate?.ToString("dd MMM yyyy HH:mm")</strong>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.ProductId" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Edit Product
                        </a>
                        <button type="button" class="btn btn-danger" onclick="confirmDelete()">
                            <i class="fas fa-trash me-2"></i>Delete Product
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>View All Products
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Form (Hidden) -->
<form id="deleteForm" asp-action="Delete" method="post" style="display: none;">
    <input type="hidden" name="id" value="@Model.ProductId" />
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Show success/error messages
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: '@TempData["SuccessMessage"]',
                confirmButtonColor: '#28a745',
                timer: 3000
            });
            </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <text>
            Swal.fire({
                icon: 'error',
                title: 'Error!',
                text: '@TempData["ErrorMessage"]',
                confirmButtonColor: '#dc3545'
            });
            </text>
        }

        function confirmDelete() {
            Swal.fire({
                title: 'Delete Product?',
                html: 'Are you sure you want to delete <strong>"@Model.ProductName"</strong>?<br><small class="text-muted">This action cannot be undone!</small>',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '<i class="fas fa-trash me-2"></i>Yes, delete it!',
                cancelButtonText: '<i class="fas fa-times me-2"></i>Cancel'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Deleting...',
                        text: 'Please wait',
                        allowOutsideClick: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });
                    document.getElementById('deleteForm').submit();
                }
            });
        }
    </script>

    <style>
        .page-header {
            background: linear-gradient(135deg, #fff 0%, #f8f9fa 100%);
            padding: 1.5rem 0;
            border-bottom: 2px solid #dc3545;
            margin-bottom: 2rem;
        }

        .page-title {
            font-weight: 600;
            color: #333;
        }

        .card-header {
            font-weight: 600;
        }

        @@media (max-width: 576px) {
            .row.mb-3 {
                margin-bottom: 1rem !important;
            }

            .col-sm-4,
            .col-sm-8 {
                margin-bottom: 0.5rem;
            }
        }
    </style>
}
